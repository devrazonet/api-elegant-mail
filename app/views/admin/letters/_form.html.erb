<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <%= method %>
      <%= form_with(model: [:admin, @letter], local: true, html: { class: "needs-validation" }) do |form| %>
        <% if letter.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(letter.errors.count, "error") %> prohibited this letter from being saved:</h4>
            <ul>
              <% letter.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="mb-3">
          <%= form.label :sender, class: "form-label" %>
          <%= form.text_field :sender, class: "form-control form-control-sm", required: true %>
        </div>
        <div class="mb-3">
          <%= form.label :reciever, class: "form-label" %>
          <%= form.text_field :reciever, class: "form-control form-control-sm", required: true %>
        </div>
        <div class="mb-3">
          <%= form.label :message, class: "form-label" %>
          <%= form.text_area :message, class: "form-control form-control-sm", rows: 5, required: true %>
        </div>
        <div class="row mb-3">
          <div class="col">
            <%= form.label :status, class: "form-label" %>
            <%= form.select :status, Letter.statuses.keys.map {|status| [status.humanize, status]}, {}, class: "form-select form-select-sm" %>
          </div>
          <div class="col">
            <%= form.label :public, class: "form-label" %>
            <%= form.select :public, [['No', false], ['Yes', true]], {}, class: "form-select form-select-sm" %>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col">
            <%= form.submit "Submit", class: "btn btn-primary btn-sm w-100" %>
          </div>
          <div class="col">
            <%= link_to "Back to Letters", admin_letters_path, method: :get, class: "btn btn-secondary btn-sm w-100" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
