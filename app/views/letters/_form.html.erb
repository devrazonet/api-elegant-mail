<div class="form-paper">
  <%= form_with(model: @letter, url: letters_path, method: :post, local: true, html: { class: "needs-validation" }) do |form| %>
    <% if letter.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(letter.errors.count, "error") %> prohibited this letter from being saved:</h4>
        <ul>
          <% letter.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <div class="col-6">
        <div class="mb-3">
          <%= form.text_field :sender, class: "form-control form-control-sm", placeholderf: "De:", required: true %>
        </div>
      </div>
      <div class="col-6">
        <div class="mb-3">
          <%= form.text_field :reciever, class: "form-control form-control-sm", placeholder: "Para: ", required: true %>
        </div>
      </div>
    </div>
    <div class="mb-3">
      <%= form.text_area :message, class: "form-control form-control-sm", rows: 5, placeholder: "Mande aqui a sua melhor mensagem :)", required: true %>
    </div>
    <div class="row mb-3">
      <div class="col">
        <%= form.submit "Enviar", class: "btn btn-wood" %>
      </div>
    </div>
  <% end %>
</div>
